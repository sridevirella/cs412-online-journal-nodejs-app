<strong>{{> user_messages}}</strong>

<div class="container py-5">
    <div class="row">
        <div class="col-md-12">
            <div class="row">
                <div class="col-md-6 mx-auto">
                    <div class="card border-secondary emphasize-dark">
                        <div class="card-header">
                            <h3 class="mb-0 my-2">{{pageHeading}}</h3>
                        </div>
                        <div class="card-body">
                            <form method="post" , action="/users/profile/save">
                                <input type="hidden" name="saveMethod"
                                       value="{{#if isCreate}}create{{else}}update{{/if}}">
                                <div class="form-group">
                                    <label class="col-form-label" for="firstName">First Name</label>
                                    <input class="form-control" id="firstName" type="text" name="first"
                                           value="{{firstName}}" required/>
                                </div>
                                <div class="form-group">
                                    <label class="col-form-label" for="lastName">Last Name</label>
                                    <input class="form-control" id="lastName" type="text" name="last"
                                           value="{{lastName}}" required/>
                                </div>
                                <div class="form-group">
                                    <label class="col-form-label" for="email">Email</label>
                                    <input class="form-control" id="email" type="email" name="email" value="{{email}}"
                                           required
                                           readonly/><br/>
                                </div>
                                <div class="form-group">
                                    <a class="btn btn-dark col-auto mr-5" data-toggle="modal"
                                       data-target="#modalPassword">Change
                                        Password</a>
                                    <input class="pl-3 pr-3 pb-1 pt-1 ml-5 btn btn-primary" type="submit" value="Save">

                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<form method="post" , action="/users/profile/changePassword">
    <div class="container-fluid">
        <div class="modal fade" id="modalPassword" role="dialog">
            <div class="modal-dialog modal-lg">
                <div class="modal-content">
                    <div class="modal-header">
                        <h4 class="modal-title">Change Password</h4>
                    </div>

                    <div class="modal-body">

                        <div class="form-group row justify-content-center mb-0">
                            <div class="col-1 col-md-3"></div>
                            <div class="col-9 col-md-4 text-left font-weight-bold">
                                <label class="col-form-label" for="oldPassword">Old Password</label>
                            </div>
                            <div class="col-1 col-md-3"></div>
                            <div class="col-9 col-md-4">
                                <input class="form-control" id="oldPassword" type="password" name="oldPassword"/><br/>
                            </div>
                        </div>

                        <div class="form-group row justify-content-center mb-0">
                            <div class="col-1 col-md-3"></div>
                            <div class="col-9 col-md-4 text-left font-weight-bold">
                                <label class="col-form-label" for="newPassword">new Password</label>
                            </div>
                            <div class="col-1 col-md-3"></div>
                            <div class="col-9 col-md-4">
                                <input class="form-control" id="newPassword" type="password" name="newPassword"/><br/>
                            </div>
                        </div>

                        <div class="form-group row justify-content-center mt-3 mb-5">
                            <div class="row">
                                <div class="col-xs-6">
                                    <button class="btn btn-primary col-auto mr-5" type="submit">Save Password</button>
                                </div>
                                <div class="col-xs-6">
                                    <button type="button" class="btn btn-danger pl-3 pr-3 pb-2 pt-2 ml-5"
                                            data-dismiss="modal">Close
                                    </button>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</form>
</div>