<strong>{{> user_messages}}</strong>

<div class="container py-5">
    <div class="row">
        <div class="col-md-12">
            <div class="row">
                <div class="col-md-6 mx-auto">
                    <div class="card border-secondary emphasize-dark">
                        <div class="card-header">
                            <h3 class="mb-0 my-2">{{pageHeading}}</h3>
                        </div>
                        <div class="card-body">
                            <form method="post" , action="/users/save" class="form" role="form">
                                <input type="hidden" name="saveMethod"
                                       value="{{#if isCreate}}create{{else}}update{{/if}}">
                                <div class="form-group">
                                    <label class="col-form-label" for="firstName">First Name</label>
                                    <input class="form-control" id="firstName" type="text" name="first" required/>
                                </div>
                                <div class="form-group">
                                    <label class="col-form-label" for="lastName">Last Name</label>
                                    <input class="form-control" id="lastName" type="text" name="last" required/>
                                </div>
                                {{> register_login }}
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>