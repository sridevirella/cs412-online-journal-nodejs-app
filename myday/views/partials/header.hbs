<header>
    <nav class="navbar navbar-expand-sm navbar-dark bg-dark border">
        <a class="navbar-brand" href="/"><i data-feather="home"></i></a>
        <button class="navbar-toggler" type="button"
                data-toggle="collapse" data-target="#navbarSupportedContent"
                aria-controls="navbarSupportedContent"
                aria-expanded="false" aria-label="Toggle Navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <span class="navbar-text col text-left">{{pageHeading}}</span>
            {{#unless loggedIn}}
                <a class="mr-4 mt-2 mb-2 nav-item nav-link btn btn-light col-auto {{isRegisterActive}}" href="/users/register">Sign up</a>
                <a class="mr-4 mt-2 mb-2 nav-item nav-link btn btn-light col-auto {{isLoginActive}}" href="/users/login">Login</a>
            {{else}}
                <a class="mr-4 mt-2 mb-2 nav-item nav-link btn btn-light col-auto {{isViewAllActive}}" href="/diary_entries/viewAll">View all</a>
                <a class="mr-4 mt-2 mb-2 nav-item nav-link btn btn-light col-auto {{isAddActive}}" href="/diary_entries/add">Add entry</a>
                {{> profile}}
            {{/unless}}
        </div>
    </nav>
</header>