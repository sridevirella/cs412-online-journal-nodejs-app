<div class="container-fluid m-2">
    {{> user_messages}}
</div>
<form method="post", action="/diary_entries/search/find">
    <div class="container-fluid mt-4">
        <div class="form-group row justify-content-center mb-0">
            <div class="col-1 col-md-3"></div>
            <div class="col-9 col-md-4 text-left font-weight-bold">
                <label class="col-form-label" for="search">Search By Title</label>
            </div>
            <div class="col-1 col-md-3"></div>
            <div class="col-9 col-md-4">
                <div class="input-group">
                    <input type="text" class="form-control" name="searchWord" placeholder="Search Entries">
                    <div class="input-group-append">
                        <button class="btn btn-dark" type="submit">
                            <i data-feather="search"></i>
                        </button>
                    </div>
                </div>
            </div>
        </div>

        <div class="form-group row justify-content-center mb-0">
            <div class="col-1 col-md-3"></div>
            <div class="col-9 col-md-4 text-left font-weight-bold">
                <label class="col-form-label" for="searchDate">Select By Date</label>
            </div>
            <div class="col-1 col-md-3"></div>
            <div class="col-9 col-md-4">
                <input class="form-control border border-dark" type="date" name="searchDate" max={{maxDate}}>
            </div>
        </div>

    </div>
    </div>
</form>

<div class="container-fluid mt-4">
    <div class="row justify-content-center">
        <div class="btn-group-vertical" role="group">
            <table class="table table-hover">
                <thead class="thead-dark">
                <tr>
                    <th>Date</th>
                    <th>Title</th>
                </tr>
                </thead>

                <tbody>
                {{#each entryList}}
                    <tr class="clickable-table" onclick="window.location='/diary_entries/view?id={{ _id }}'">
                    <td>{{ date }}</td>
                    <td>{{ title }}</td>
                    </tr>
                {{/each}}
                </tbody>
            </table>
        </div>
    </div>
</div>