<div class="container-fluid mt-5 mb-5">
    <div class="row justify-content-center">
        <img src="/assets/images/edit.png" class="edit-img" alt="edit icon"/>
    </div>
</div>
<div class="container-fluid m-2">
    {{> user_messages}}
</div>
<form method="post" action="/diary_entries/save">
<div class="container-fluid">
    <input type="hidden" name="saveMethod" value="{{#if isCreate}}create{{else}}update{{/if}}">
    <input type="hidden" name="entryId" value="{{ _id }}">

    <div class="form-group row justify-content-center">
        <div class="col-4 col-md-2 font-weight-bold">
            <label class="col-form-label" for="day">Date</label>
        </div>
        <div class="col-8 col-md-4">
            <input class="form-control border border-dark" type="date" name="day" value="{{entryDate}}" max={{maxDate}} required>
        </div>
    </div>

    <div class="form-group row justify-content-center">
        <div class="col-4 col-md-2 font-weight-bold">
            <label class="col-form-label" for="title">Title</label>
        </div>
        <div class="col-8 col-md-4">
            <input class="form-control border border-dark" type="text" name="title" value="{{entryTitle}}" required/>
        </div>
    </div>

    <div class="form-group row justify-content-center">
        <div class="col-4 col-md-2 font-weight-bold">
            <label for="body">Your Thoughts</label>
        </div>
        <div class="col-8 col-md-4">
            <textarea class="form-control border border-dark" rows="4" name="body">{{entryNote}}</textarea>
        </div>
    </div>

    <div class="form-group row justify-content-center">
        <div class="col-4 col-md-2 font-weight-bold">
            <input type="submit" class="btn btn-primary" value="Save"/>
        </div>
    </div>

</div>
</form>