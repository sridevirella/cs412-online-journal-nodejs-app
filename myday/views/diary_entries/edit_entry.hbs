<strong>{{> user_messages}}</strong>

<div class="container py-2">
    <div class="container emphasize-dark">
        <div class="row">
            <div class="col-md-12">
                <div class="row border-secondary">
                    <div class="col-md-6 mx-auto">
                        <div class="card border-secondary">
                            <div class="card-header bg-custom">
                                <h3 class="mb-0 my-2">{{pageHeading}}</h3>
                            </div>
                            <div class="card-body">
                                <form method="post" action="/diary_entries/save">
                                    <input type="hidden" name="saveMethod" value="{{#if isCreate}}create{{else}}update{{/if}}">
                                    <input type="hidden" name="entryId" value="{{ _id }}">

                                    <div class="form-check">
                                        <input type="checkbox" class="form-check-input" id="favorite" name="favorite"
                                               value="{{entryFavorite}}"><br/>

                                        {{#if isFavorite}}
                                            <i data-feather="heart" id="addHeartIcon" name="favorite1234" value="on" style="color: red"></i>
                                            <p>Favorite entry</p>
                                        {{else}}
                                            <i data-feather="heart" id="addHeartIcon" name="favorite1234" value="on"></i>
                                            <p>Favorite entry</p>
                                        {{/if}}

                                    </div>
                                    <div class="form-group">
                                        <label class="col-form-label" for="day">Date</label>
                                        <input class="form-control border border-dark" type="date" name="day" id="txtDate" value="{{entryDate}}" max={{maxDate}}
                                               required>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-form-label" for="title">Title</label>
                                        <input class="form-control border border-dark" type="text" name="title" value="{{entryTitle}}" required/>
                                    </div>

                                    <div class="form-group">
                                        <label class="col-form-label" for="body">Your Thoughts</label>
                                        <textarea class="form-control border border-dark" rows="4" name="body">{{entryNote}}</textarea>
                                    </div>
                                    <input type="submit" class="btn btn-primary" value="Save"/>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>